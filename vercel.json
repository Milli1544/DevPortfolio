{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/client/dist/images/$1"
    },
    {
      "src": "/logo.(png|svg)",
      "dest": "/client/dist/logo.$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/dist/manifest.json"
    },
    {
      "src": "/Resume.pdf",
      "dest": "/client/dist/Resume.pdf"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot))",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "functions": {
    "server/server.js": {
      "maxDuration": 30
    }
  }
}
