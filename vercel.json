{
  "version": 2,
  "builds": [
    {
      "src": "api-functions/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api-functions/auth/*.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api-functions/test.js"
    },
    {
      "src": "/api/health",
      "dest": "/api-functions/health.js"
    },
    {
      "src": "/api/projects",
      "dest": "/api-functions/projects.js"
    },
    {
      "src": "/api/contacts",
      "dest": "/api-functions/contacts.js"
    },
    {
      "src": "/api/qualifications",
      "dest": "/api-functions/qualifications.js"
    },
    {
      "src": "/api/auth/signup",
      "dest": "/api-functions/auth/signup.js"
    },
    {
      "src": "/api/auth/signin",
      "dest": "/api-functions/auth/signin.js"
    },
    {
      "src": "/api/auth/signout",
      "dest": "/api-functions/auth/signout.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "ignoreCommand": "echo 'Ignoring server directory'"
}
