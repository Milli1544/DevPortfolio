# NUCLEAR OPTION: Block ALL server detection
# Exclude entire server directory (multiple patterns)
server/
server/**
/server
/server/
/server/**
**/server/**
**/*server*
**/server.js
server.js
express.js
**/express.js

# Block all possible server entry points
app.js
main.js
index.js
**/app.js
**/main.js
**/index.js

# Whitelist only what we need
!api-functions/
!api-functions/**
!index.html
!assets/
!assets/**
!client/dist/
!client/dist/**

# Block package files that could trigger server detection
package-server.json
vercel-package.json
**/package-server.json
**/package.json
!package.json

# Block config and build files
config/
/config
**/config/**
build/
dist/
!client/dist/

# Block all development files
*.test.js
*.spec.js
setup.js
build.js
build-simple.js
cleanup-env.js
seedAdmin.js
seedProjects.js
**/test/**
**/tests/**
cypress/
__tests__/

# Block environment files
.env
.env.*
!.env.example

# Block dependencies and logs
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json
yarn.lock

# Block config files
tsconfig.json
vite.config.js
vitest.config.js
tailwind.config.js
postcss.config.js
cypress.config.js
eslint.config.js
**/vite.config.js
**/*.config.js
!vercel.json

# Block IDE and system files
.vscode/
.idea/
*.swp
*.swo
.DS_Store
Thumbs.db

# Block git files
.git/
.github/
.gitignore

# Block documentation
*.md
!README.md
LICENSE

# Block client source (we only need built files)
client/src/
client/public/
client/cypress/
client/*.config.js
client/package.json
client/package-lock.json
client/.gitignore
client/node_modules/